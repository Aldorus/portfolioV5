{% extends 'ExodPortfolioBundle::base.html.twig' %}
{% block body %}

<h1>Contenu list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Idfonctionnel</th>
            <th>Texte</th>
            <th>Path</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('contenu_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.idFonctionnel }}</td>
            <td>{{ entity.texte }}</td>
            <td>{{ entity.path }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('contenu_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('contenu_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('contenu_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
