{% extends 'ExodPortfolioBundle:Base:baseFront.html.twig' %}
{% block body %}

<div id="headerBar">
	
	
	<div id="logo">
		<a href="{{path('home')}}"><img src="{{asset('bundles/exodportfolio/images/logo.png')}}"/></a>	
	</div>
	
	<div id="menuCenter">
	
		<a href="{{path('home')}}" id="menuHome" class="selectedHome"><span>Accueil</span></a>
		<a href="{{path('chooseCategories')}}" id="menuProjects"><span>Projets</span></a>
		<a href="{{path('informations')}}" id="menuInformations"><span>Informations</span></a>
		<a href="{{ path('consulterCv') }}" id="menuCV"><span>CV</span></a>
		<a href="{{ path('pageContact') }}" id="menuContacts"><span>Contacts</span></a>
		
		
	</div>
	
</div>

<div id="page">

	<article id="presentation" class="box">
		<h1>Roussel Guillaume</h1>
		<p>{% autoescape false %}{%if contenuProfil is not empty%}{{contenuProfil.texte}}{%endif%}{%endautoescape%}</p>
	</article>
	
	<article id="actualite" class="box">
		<h1>Actualit&eacute;s</h1>
		{% for actualite in lastActualites if lastActualites is not empty %}
			<p style="border:0;">
				<a href="{{path('consulterProjet', { 'idProjet': actualite.idarticle.idprojet.id } )}}"><strong><time datetime="{{actualite.date|date('Y-m-d')}}">{{actualite.date|date('d/m/Y')}}</time> - Projet {{actualite.idarticle.label}}</strong></a> :  {% autoescape false %}{{actualite.texte}}{%endautoescape%}
			</p>
			
		{% endfor %}
	</article>
	
	<article id="competence" class="box">
		<h1>Comp&eacute;tences</h1>
		<div id="chartContainer"></div>
	</article>
	
	<article id="contact" class="box">
		<div id="listContact">
			<h1>Contacts</h1>
			<a href="http://about.me/rousselguillaume"><img src="{{asset('bundles/exodportfolio/images/icone_aboutme.png')}}" alt="icone about me"/>
